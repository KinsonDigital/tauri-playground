{
	"deno.enablePaths": [
		"scripts",
		".github/cicd",
		"playground.ts"
	],
	"deno.config": "./github/cicd/deno.json",
	"files.exclude": {
		"**/.git": true,
		"**/.svn": true,
		"**/.hg": true,
		"**/CVS": true,
		"**/.DS_Store": true,
		"**/Thumbs.db": true,
		"node_modules": true,
		"out": true,
		".next": true,
		"**/target": true
	},
	"editor.detectIndentation": false,
	"files.associations": {
		"*.yml": "yaml",
		"*.yaml": "yaml",
		"*.env-*": "toml",
	},
	"[typescript]": {
		"editor.insertSpaces": false,
		"editor.tabSize": 3,
	},
	"[typescriptreact]": {
		"editor.insertSpaces": false,
		"editor.tabSize": 3,
	},
	"[yaml]": {
		"editor.insertSpaces": true,
		"editor.tabSize": 2,
	},
	"[jsonc]": {
		"editor.insertSpaces": false,
		"editor.tabSize": 4,
		"editor.defaultFormatter": "vscode.json-language-features"
	},
	"[github-actions-workflow]": {
		"editor.tabSize": 2,
		"editor.insertSpaces": true
	},
	"deno.enable": true,
}
